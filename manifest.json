                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "Buscar",
            "short_name": "Búsqueda",
            "description": "Buscar noticias",
            "url": "search.php",
            "icons": [
                {
                    "src": "assets/img/icons/shortcut-search.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "Mi Perfil",
            "short_name": "Perfil",
            "description": "Acceder a mi perfil de usuario",
            "url": "profile.php",
            "icons": [
                {
                    "src": "assets/img/icons/shortcut-profile.png",
                    "sizes": "96x96"
                }
            ]
        }
