    "lang": "es-AR",
    "dir": "ltr",
    "categories": ["news", "magazines"],
    "iarc_rating_id": "",
    "share_target": {
        "action": "share.php",
        "method": "GET",
        "enctype": "application/x-www-form-urlencoded",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "permissions": [
        "geolocation",
        "notifications",
        "background-sync"
    ],
    "scope": "/",
    "protocol_handlers": [
        {
            "protocol": "web+news",
            "url": "/news.php?slug=%s"
        },
        {
            "protocol": "web+category",
            "url": "/category.php?slug=%s"
        }
    ],
    "launch_handler": {
        "client_mode": [
            "focus-existing",
            "auto"
        ]
    },
    "edge_side_panel": {
        "preferred_width": 400
    },
    "id": "com.portalnoticias.app",
    "file_handlers": [
        {
            "action": "/open-file.php",
            "accept": {
                "text/*": [".txt", ".md"]
            }
        }
    ],
    "display_override": [
        "window-controls-overlay",
        "standalone",
        "browser"
    ],
    "handle_links": "preferred",
    "note_taking": {
        "new_note_url": "/notes.php?new=1"
    },
    "Clipboard": {
        "read": ["text/plain"],
        "write": ["text/plain"]
    }
}